@page
@model CalorieCounter.Pages.Foods.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container pt-4 pb-2 row">
    <div class="col-lg-6">
        <h2 class="text-info py-2">Create New Daily Food</h2>
    </div>
    <div class="col-lg-3 offset-3 text-right py-2">
        <a asp-page="../DailyFoods/Index" asp-route-userId="@Model.FoodTypeVM.DailyFood.UserId" class="btn btn-outline-success form-control"> Back to List</a>
    </div>
</div>

<div class="container backgroundWhite">
    <div class="card">
        <div class="card-header bg-dark text-light ml-0 row container">
            <div class="col-lg-1 text-center pt-3 text-white-50">
                <i class="far fa-user fa-2x"></i>
            </div>
            <div class="col-lg-5 text-right">
                <label class="text-info">@Model.FoodTypeVM.DailyFood.ApplicationUser.Name / @Model.FoodTypeVM.DailyFood.ApplicationUser.Email</label><br />
                <label class="text-info">Weight: @Model.FoodTypeVM.DailyFood.ApplicationUser.Weight</label><br />

            </div>

            <div class="col-lg-5">
                <label class="text-info">Min: @Model.FoodTypeVM.DailyFood.MinCalories Max: @Model.FoodTypeVM.DailyFood.MaxCalories</label><br />             
            </div>
            <div class="col-lg-1 text-center pt-3 text-white-50">
                <i class="icon-food fa-2x"></i>
            </div>
        </div>
        <div class="card-body">
            <form method="post" style="width:100%">
                <div class="container">
                    <input hidden asp-for="FoodTypeVM.DailyFood.MinCalories" />
                    <input hidden asp-for="FoodTypeVM.DailyFood.MaxCalories" />
                    <input hidden asp-for="FoodTypeVM.DailyFood.Day" />
                    <input hidden asp-for="FoodTypeVM.DailyFood.UserId" />
                    <input hidden asp-for="FoodTypeVM.DailyFood.Id" />

                    <div class="border rounded p-2">
                        <div class="row">
                            <div class="col-lg-3">
                                <h4 class="text-info pl-3 pt-3 pb-2">Add Food</h4>
                            </div>
                            <div class="col-lg-9 pb-2 pt-3 p" >
                                <div class="row">
                                    <div class="col-lg-5">
                                        <select asp-for="FoodTypeVM.FoodDetails.FoodTypeId"
                                                asp-items="@(new SelectList(Model.FoodTypeVM.FoodTypeList,"Id","Name"))"
                                                class="form-control"></select>
                                    </div>
                                    <div class="col-lg-4">
                                        <button type="submit" asp-page-handler="AddToCart" class="form-control btn btn-primary">
                                            Add
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <br />
                    <div class="border container rounded p-2">
                        <h3 class="text-info pb-2">Food Summary</h3>
                        @if (Model.FoodTypeVM.ServiceAddFood.Count==0)
                        {
                            <p>
                                No food has been added yet. Please add food.
                            </p>
                        }
                        else
                        {
                            <div class="row mt-3">
                                <div class="col-lg-7">
                                    <table class="table table-striped border">
                                        <tr class="table-secondary">
                                            <th>
                                                @Html.DisplayNameFor(m=>Model.FoodTypeVM.FoodTypeList.FirstOrDefault().Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(m => Model.FoodTypeVM.FoodTypeList.FirstOrDefault().Calorie)
                                            </th>
                                            <th>

                                            </th>
                                        </tr>
                                        @foreach(var item in Model.FoodTypeVM.ServiceAddFood)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(m => item.FoodType.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(m => item.FoodType.Calorie)
                                            </td>
                                            <td>
                                                <button type="submit" asp-page-handler="RemoveFromCart" asp-route-foodTypeId="@item.FoodTypeId" class="btn btn-danger form-control">
<i class="far fa-trash-alt"></i>
</button>
                                            </td>
                                        </tr>
                                        }
                                        <tr style="background-color:#e2fee2">
                                            <td colspan="1">
                                                <h6 class="text-success">Total Calories:</h6>
                                            </td>
                                            <td colspan="2">
                                                <h6 class="text-success">kcal @Model.FoodTypeVM.FoodHeader.TotalCalories</h6>
                                            </td>
                                        </tr>
                                        
                                    </table> 
                                </div>
                                <div class="col-lg-5 px-4 pb-2">
                                    <div class="row py-2">
                                        <div class="col-lg-12">
                                            <textarea placeholder="Comments..." asp-for="FoodTypeVM.FoodHeader.Details" class="form-control" style="height: 100px;">

                                        </textarea>
                                        </div>
                                    </div>
                                    <div class="row p-0">
                                        <div class="col-lg-12">
                                            <button class="btn btn-success form-control" onclick="return validateInput()">Confirm Food</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>



                </div>
            </form>
        </div>
    </div>
</div>

