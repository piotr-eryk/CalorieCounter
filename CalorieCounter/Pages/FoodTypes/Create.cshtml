@page
@model CalorieCounter.Pages.FoodTypes.CreateModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create Food Type</h2>
<br />
<form method="post">
    <div class="border backgroundWhite">
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="FoodType.Name"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="FoodType.Name" class="form-control" />
            </div>
            <span asp-validation-for="FoodType.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-lg-2">
                <label asp-for="FoodType.Calorie"></label>
            </div>
            <div class="col-lg-5">
                <input asp-for="FoodType.Calorie" class="form-control" />
            </div>
            <span asp-validation-for="FoodType.Calorie" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-lg-5 col-lg-offset-2">
              <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}