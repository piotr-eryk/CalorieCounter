@page
@model CalorieCounter.Pages.Foods.HistoryModel
@{
    ViewData["Title"] = "History";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container pt-4 pb-2 row">
    <div class="col-6">
        <h2 class="text-info py-2">Food History</h2>
    </div>
    <div class="col-3 offset-3 text-right py-2">
        <a asp-page="../DailyFoods/Index" asp-route-userId="@Model.UserId" class="btn btn-outline-success form-control"> Back to List</a>
    </div>
</div>
@if (Model.FoodHeader.Count == 0)
{
    <div class="backgroundWhite">
        <p>No Food record found...</p>
    </div>
}
else
{
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-dark text-light ml-0 row container">
                <div class="col-1 text-center pt-3 text-white-50 ">
                    <i class="far fa-user fa-2x"></i>
                </div>
                <div class="col-5">
                    <label class="text-info">@Model.FoodHeader[0].DailyFood.ApplicationUser.Name / @Model.FoodHeader[0].DailyFood.ApplicationUser.Email</label><br />
                    <label class="text-info">Weight: @Model.FoodHeader[0].DailyFood.ApplicationUser.Weight</label><br />
                </div>
                <div class="col-5 text-right">
                    <label class="text-info">Min kcal: @Model.FoodHeader[0].DailyFood.MinCalories Max kcal: @Model.FoodHeader[0].DailyFood.MaxCalories</label><br />
                </div>
                <div class="col-1 text-center pt-3 text-white-50 ">
                    <i class="icon-food fa-2x"></i>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => Model.FoodHeader[0].TotalCalories)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.FoodHeader[0].Details)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => Model.FoodHeader[0].DateAdded)
                        </th>

                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.FoodHeader)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.TotalCalories)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Details)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.DateAdded)
                            </td>
                            <td>
                                <a asp-page="Details" class="btn btn-info form-control" asp-route-dailyid="@item.Id">
                                    <i class="fas fa-list-alt"></i> Details
                                </a>

                            </td>
                        </tr>
                    }

                </table>


            </div>
        </div>
    </div>
}


