@page
@model CalorieCounter.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<form method="get" asp-page="Index">
    <br /><br />
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">List of Registered</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="/Account/Register" asp-area="Identity" class="btn btn-info">
                <i class="fas fa-plus"></i>&nbsp; Create New Registered
            </a>
        </div>
    </div>
    <div class="border backgroundWhite">
        <div style="height:60px;" class="container border border-secondary">
            <div class="row">
                <div class="col-lg-10">
                    <div class="row" style="padding-top:10px">
                        <div class="col-lg-4">
                            @Html.Editor("searchEmail", new { htmlAttributes = new { @class = "form-control", placeholder = "Email..." } })
                        </div>
                        <div class="col-lg-4">
                            @Html.Editor("searchName", new { htmlAttributes = new { @class = "form-control", placeholder = "Name..." } })
                        </div>
                        <div class="col-lg-4">
                            @Html.Editor("searchWeight", new { htmlAttributes = new { @class = "form-control", placeholder = "Weight..." } })
                        </div>
                    </div>
                </div>
                <div class="col-lg-1">
                    <div class="row" style="padding-top:10px">
                        <button type="submit" name="submit" value="Search" class="btn btn-info form-control">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br/>
        <div>
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].Weight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.UserListVM.ApplicationUserList[0].Height)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach(var item in Model.UserListVM.ApplicationUserList)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Height)
                    </td>
                    <td>
                        <a asp-page="../DailyFoods/Index" asp-route-userId="@item.Id" style="text-decoration:none;">
                            <img src="~/images/eat.png" width="40"/> &nbsp; View Food
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-primary text-white" asp-page="Edit" asp-route-id="@item.Id">
                            <i class="far fa-edit"></i>
                        </a>
                        <a class="btn btn-danger text-white" asp-page="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-dumpster"></i>
                        </a>
                    </td>
                </tr>
                }
                <tr>
                    <td colspan = "5" class="text-right">
                        <div page-model="@Model.UserListVM.PagingInfo" asp-action="Index" asp-class="btn border"
                            page-class-normal="btn btn-light" page-class-selected="btn btn-info active" class="btn-group">
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

